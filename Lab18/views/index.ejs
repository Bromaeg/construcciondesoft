<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Lab-13</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css">
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <h1>Masones Log-In</h1>
    <p>Por favor ingrese sus credenciales</p>
    <form method="POST">
      <br>
      <label for="username">Usuario:</label>
      <input type="text" id="username" name="username">
      <span class="tooltip">ℹ<br>
      <span class="tooltip-text">Ingrese un User válido. Ejemplo: *mason*<br></span>
      </span>
      <label for="password">Contraseña:</label>
      <input type="password" id="password" name="password">
      <span class="tooltip">ℹ<br>
      <span class="tooltip-text">Ingrese una contraseña válida. Ejemplo: *mason*      <br></span>
      </span>
      <button id="btn-login" class="button is-primary">Ingresar</button>
    </form>

    <a href="/registrar">Registrar</a>

    <script type="text/javascript">
      const btn = document.getElementById('btn-login');
      const models = require('../models/modelos.models.js');
      btn.addEventListener('click', (e) => {
      e.preventDefault();
      if (models.validarcredenciales(username, password) === true) {
        window.location.href = '/module';
        console.log(models.validarcredenciales(username, password));
        } else {
          alert('Usuario o contraseña incorrectos');
          window.location.href = '/';
        }
      });
    </script>
  </body>
</html>
